<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="1dp"
    android:background="@color/white"
    android:elevation="22dp"
    android:orientation="vertical"
    app:cardBackgroundColor="@color/white"
    app:cardElevation="16dp"
    app:cardUseCompatPadding="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="vertical">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0.2"
                android:orientation="vertical"
                android:paddingEnd="5dp"
                android:paddingRight="5dp">

                <TextView
                    android:id="@+id/sosname"
                    android:layout_width="match_parent"
                    android:layout_height="56dp"
                    android:layout_marginStart="5dp"
                    android:layout_marginLeft="5dp"
                    android:layout_marginBottom="10dp"
                    android:background="@color/white"
                    android:drawableStart="@mipmap/ic_name"
                    android:drawableLeft="@mipmap/ic_name"
                    android:focusableInTouchMode="false"
                    android:fontFamily="@font/roboto_medium"
                    android:gravity="center_vertical"
                    android:hint="From"
                    android:inputType="textImeMultiLine|textNoSuggestions"
                    android:padding="5dp"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/soscontact"
                    android:layout_width="match_parent"
                    android:layout_height="56dp"
                    android:layout_marginLeft="5dp"
                    android:layout_marginBottom="5dp"
                    android:background="@color/white"
                    android:drawableStart="@mipmap/ic_call"
                    android:drawableLeft="@mipmap/ic_call"
                    android:drawableEnd="@mipmap/ic_map"
                    android:focusableInTouchMode="false"
                    android:fontFamily="@font/roboto_medium"
                    android:gravity="center_vertical"
                    android:hint="To"
                    android:inputType="textImeMultiLine|textNoSuggestions"
                    android:padding="5dp"
                    android:textSize="14sp" />
            </LinearLayout>


            <ImageView
                android:id="@+id/sosdel"
                android:layout_width="wrap_content"
                android:layout_height="48dp"
                android:layout_gravity="top"
                android:layout_marginEnd="1dp"
                android:layout_weight="0.2"
                android:adjustViewBounds="true"
                android:background="@android:color/transparent"
                android:src="@drawable/ic_del"
                android:layout_marginRight="1dp" />

        </LinearLayout>

    </LinearLayout>
</androidx.cardview.widget.CardView>