<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/common_google_signin_btn_icon_light_normal_background"
    android:orientation="vertical"
    android:padding="10dp">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/_l1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_toLeftOf="@id/map"
            android:orientation="vertical"
            android:paddingEnd="5dp"
            android:paddingRight="5dp">

            <TextView
                android:id="@+id/sosname"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_marginStart="5dp"
                android:layout_marginLeft="5dp"
                android:layout_marginBottom="10dp"
                android:background="@color/white"
                android:drawableStart="@mipmap/ic_name"
                android:drawableLeft="@mipmap/ic_name"
                android:ems="8"
                android:focusableInTouchMode="false"
                android:fontFamily="@font/roboto_medium"
                android:gravity="center_vertical"
                android:hint="From"
                android:inputType="textImeMultiLine|textNoSuggestions"
                android:padding="5dp"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/soscontact"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_marginLeft="5dp"
                android:layout_marginBottom="5dp"
                android:background="@color/white"
                android:drawableStart="@mipmap/ic_call"
                android:drawableLeft="@mipmap/ic_call"
                android:ems="12"
                android:focusableInTouchMode="false"
                android:fontFamily="@font/roboto_medium"
                android:gravity="center_vertical"
                android:hint="To"
                android:inputType="textImeMultiLine|textNoSuggestions"
                android:maxLength="13"
                android:padding="5dp"
                android:textSize="14sp" />

        </LinearLayout>


        <ImageView
            android:id="@+id/sosdel"
            android:layout_width="24dp"
            android:layout_height="48dp"
            android:layout_alignParentRight="true"
            android:layout_gravity="top"
            android:layout_marginEnd="1dp"
            android:layout_marginRight="1dp"
            android:adjustViewBounds="true"
            android:background="@android:color/transparent"
            android:src="@drawable/ic_del"
            android:visibility="visible" />


        <TextView
            android:id="@+id/map"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/sosdel"
            android:layout_alignParentRight="true"
            android:layout_gravity="end"
            android:layout_marginEnd="1dp"
            android:background="@color/white"
            android:drawableStart="@drawable/ic_right"
            android:fontFamily="@font/roboto_bold"
            android:gravity="center"
            android:lines="1"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:text="Map"
            android:textAllCaps="true"
            android:textColor="@color/red"
            android:textSize="18sp"
            android:visibility="gone" />

    </RelativeLayout>


    <androidx.appcompat.widget.AppCompatCheckBox
        android:id="@+id/yeshome"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.5"
        android:background="@color/green"
        android:fontFamily="@font/roboto_bold"
        android:text="Request for live location"
        android:textColor="@color/black"
        android:textSize="18sp"
        android:theme="@style/MyCheckbox"
        android:visibility="gone" />
</LinearLayout>
