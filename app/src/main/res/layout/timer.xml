<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/transparent">

    <RelativeLayout
        android:id="@+id/relativeLayout4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@android:color/transparent"
        android:gravity="center_vertical|center"
        android:orientation="vertical"
        android:visibility="visible"
        app:layout_constraintHeight_min="wrap"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintWidth_min="wrap">

        <RelativeLayout
            android:id="@+id/layoutTP"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:layout_alignParentTop="true"
            android:background="@android:color/transparent"
            android:orientation="horizontal">

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/layoutBottomTP"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/layoutTP"
            android:background="@color/white">

            <TextView
                android:id="@+id/_t1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:layout_marginTop="40dp"
                android:layout_weight="0.2"
                android:background="@android:color/white"
                android:fontFamily="@font/roboto_black"
                android:gravity="bottom|center_horizontal"
                android:lines="2"
                android:maxEms="8"
                android:maxLines="2"
                android:minEms="8"
                android:paddingRight="5dp"
                android:text="SCHEDULE WASH HANDS ALERT"
                android:textAllCaps="true"
                android:textColor="@color/blue"
                android:textSize="14sp" />

            <RadioGroup
                android:id="@+id/myRadioGroup"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/_t1"
                android:layout_marginTop="36dp"
                android:background="@android:color/transparent"
                android:checkedButton="@id/six"
                android:orientation="vertical">

                <RadioButton
                    android:id="@+id/six"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.2"
                    android:text="Every 60 Min"
                    android:textColor="@color/black"
                    android:textSize="18sp" />

                <RadioButton
                    android:id="@+id/nine"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.2"
                    android:text="Every 90 Min"
                    android:textColor="@color/black"
                    android:textSize="18sp" />

                <RadioButton
                    android:id="@+id/onetwenty"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.2"
                    android:text="Every 120 Min"
                    android:textColor="@color/black"
                    android:textSize="18sp" />

                <RadioButton
                    android:id="@+id/three"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.2"
                    android:text="Every 180 Min"
                    android:textColor="@color/black"
                    android:textSize="18sp" />

                <RadioButton
                    android:id="@+id/four"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.2"
                    android:text="Every 240 Min"
                    android:textColor="@color/black"
                    android:textSize="18sp" />

                <RadioButton
                    android:id="@+id/sixhour"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.2"
                    android:text="Every 360 Min"
                    android:textColor="@color/black"
                    android:textSize="18sp" />

            </RadioGroup>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/myRadioGroup"
                android:layout_marginTop="20dp">

                <Button
                    android:id="@+id/home_can"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="30dp"
                    android:layout_marginRight="30dp"
                    android:background="@color/white"
                    android:fontFamily="@font/roboto_medium"
                    android:text="@android:string/cancel"
                    android:textColor="@color/black" />

                <Button
                    android:id="@+id/home_sav"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentBottom="false"
                    android:layout_marginLeft="20dp"
                    android:background="@android:color/transparent"
                    android:fontFamily="@font/roboto_black"
                    android:text="OK"
                    android:textColor="@color/black"
                    android:textSize="18sp" />

            </RelativeLayout>
        </RelativeLayout>

        <androidx.cardview.widget.CardView
            cardCornerRadius="36dp"
            android:layout_width="72dp"
            android:layout_height="72dp"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="24dp"
            android:padding="2dp"
            app:cardBackgroundColor="@color/white"
            app:cardCornerRadius="36dp">

            <ImageView

                android:layout_width="72dp"
                android:layout_height="72dp"
                android:scaleType="fitXY"
                android:src="@mipmap/ic_alarm" />
        </androidx.cardview.widget.CardView>

    </RelativeLayout>
</androidx.constraintlayout.widget.ConstraintLayout>