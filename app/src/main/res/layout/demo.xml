<?xml version="1.0" encoding="utf-8"?>
<ScrollView android:id="@+id/second_2"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_below="@id/app_bar_main"
    android:layout_gravity="top"
    android:addStatesFromChildren="false"
    android:alwaysDrawnWithCache="false"
    android:background="@drawable/collapse_round_corner"
    android:fillViewport="true"
    android:paddingLeft="10dp"
    android:paddingTop="20dp"
    android:paddingRight="10dp"
    android:scrollbars="none"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="top"
        android:background="@drawable/collapse_round_corner"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="10dp">


        <androidx.cardview.widget.CardView
            android:id="@+id/_c1"
            cardCornerRadius="50dp"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="8dp"
            android:padding="2dp"
            app:cardBackgroundColor="@android:color/transparent"
            app:cardCornerRadius="50dp"
            app:cardElevation="0dp"
            app:cardPreventCornerOverlap="true"
            app:cardUseCompatPadding="false" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="top"
            android:background="@android:drawable/screen_background_light"
            android:orientation="vertical"
            android:padding="10dp">

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="false"
                android:layout_gravity="left"
                android:layout_marginBottom="5dp"
                android:background="?attr/editTextBackground"
                android:focusableInTouchMode="false"
                android:fontFamily="@font/roboto_medium"
                android:gravity="left"
                android:text="Account Details"
                android:textSize="18sp"
                android:textStyle="bold" />

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:theme="@style/ThemeOverlay.AppCompat.Light">

                <EditText
                    android:id="@+id/input_user_mobile"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:drawableStart="@mipmap/ic_call"
                    android:drawableLeft="@mipmap/ic_call"
                    android:focusableInTouchMode="true"
                    android:fontFamily="@font/roboto_medium"
                    android:hint="Mobile no"
                    android:inputType="number"
                    android:textAppearance="@android:style/TextAppearance.DeviceDefault.Medium"
                    android:textSize="14sp" />
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:layout_marginBottom="2dp"
                android:theme="@style/ThemeOverlay.AppCompat.Light">

                <EditText
                    android:id="@+id/input_email"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:drawableStart="@mipmap/ic_email1"
                    android:drawableLeft="@mipmap/ic_email1"
                    android:fontFamily="@font/roboto_medium"
                    android:hint="Email"
                    android:inputType="textNoSuggestions|textEmailAddress"
                    android:textAppearance="@android:style/TextAppearance.DeviceDefault.Medium"
                    android:textSize="14sp" />
            </com.google.android.material.textfield.TextInputLayout>
            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:layout_marginBottom="2dp"
                android:theme="@style/ThemeOverlay.AppCompat.Light">

                <EditText
                    android:id="@+id/input_passport"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:drawableStart="@mipmap/ic_email1"
                    android:drawableLeft="@mipmap/ic_email1"
                    android:fontFamily="@font/roboto_medium"
                    android:hint="Passport No/Any ID no"
                    android:inputType="textNoSuggestions|textEmailAddress"
                    android:textAppearance="@android:style/TextAppearance.DeviceDefault.Medium"
                    android:textSize="14sp" />
            </com.google.android.material.textfield.TextInputLayout>
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="top"
            android:layout_weight="0.45"
            android:background="@color/white"
            android:orientation="vertical"
            android:padding="10dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="false"
                android:layout_gravity="left"
                android:layout_marginBottom="5dp"
                android:background="?attr/editTextBackground"
                android:focusableInTouchMode="false"
                android:fontFamily="@font/roboto_medium"
                android:gravity="left|center"
                android:text="Profile Details"
                android:textSize="18sp"
                android:textStyle="bold" />

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:layout_marginBottom="2dp"
                android:theme="@style/ThemeOverlay.AppCompat.Light"
                app:boxBackgroundMode="outline">

                <EditText
                    android:id="@+id/PatientID"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:focusableInTouchMode="false"
                    android:fontFamily="@font/roboto_medium"
                    android:hint="Patient ID"
                    android:inputType="textCapWords|textNoSuggestions"
                    android:textAppearance="@android:style/TextAppearance.DeviceDefault.Medium"
                    android:textSize="14sp" />
            </com.google.android.material.textfield.TextInputLayout>
            <!-- Email Label -->

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:layout_marginBottom="2dp"
                android:theme="@style/ThemeOverlay.AppCompat.Light"
                app:boxBackgroundMode="outline">

                <EditText
                    android:id="@+id/input_user_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/roboto_medium"
                    android:hint="Name"
                    android:inputType="textCapWords|textNoSuggestions"
                    android:textAppearance="@android:style/TextAppearance.DeviceDefault.Medium"
                    android:textSize="14sp" />
            </com.google.android.material.textfield.TextInputLayout>
            <!-- Email Label -->


            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:layout_marginBottom="2dp"
                android:theme="@style/ThemeOverlay.AppCompat.Light"
                app:boxBackgroundMode="outline">

                <AutoCompleteTextView
                    android:id="@+id/input_gender"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:cursorVisible="true"
                    android:focusableInTouchMode="false"
                    android:fontFamily="@font/roboto_medium"
                    android:hint="Gender"
                    android:inputType="text|textNoSuggestions"
                    android:textSize="14sp" />
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:layout_marginBottom="2dp"
                android:theme="@style/ThemeOverlay.AppCompat.Light"
                app:boxBackgroundMode="outline">

                <EditText
                    android:id="@+id/input_bday"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:focusableInTouchMode="false"
                    android:fontFamily="@font/roboto_medium"
                    android:hint="Birthday"
                    android:inputType="date"
                    android:textSize="14sp" />
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:layout_marginBottom="2dp"
                android:theme="@style/ThemeOverlay.AppCompat.Light"
                app:boxBackgroundMode="outline">

                <EditText
                    android:id="@+id/inputemergencyname"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:focusableInTouchMode="false"
                    android:fontFamily="@font/roboto_medium"
                    android:hint="Emergency contact name"
                    android:inputType="date"
                    android:textSize="14sp" />
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:layout_marginBottom="2dp"
                android:theme="@style/ThemeOverlay.AppCompat.Light"
                app:boxBackgroundMode="outline">

                <EditText
                    android:id="@+id/inputemergencyno"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:focusableInTouchMode="false"
                    android:fontFamily="@font/roboto_medium"
                    android:hint="Emergency contact no"
                    android:inputType="date"
                    android:textSize="14sp" />
            </com.google.android.material.textfield.TextInputLayout>

        </LinearLayout>

        <Button
            android:id="@+id/submit"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:layout_gravity="bottom"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="20dp"
            android:layout_marginRight="10dp"
            android:background="@drawable/edit_text_background"
            android:text="Submit"
            android:textColor="@color/white"
            android:textSize="12sp" />
    </LinearLayout>
</ScrollView>
